  <body>
  <div class="wrapper">
    <div class="container">
      <header><center><img src="images/banner.png" alt="CouchPotato Header" class="img-responsive main-image"></center></header>
    
    <% if logged_in? %>
    <a href="/logout" style="float:right">Logout</a>
    <% end %>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2019 <strong>CouchPotato</strong></small>
      </footer>
      </div>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
